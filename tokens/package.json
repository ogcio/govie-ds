{
  "name": "@govie-ds/tokens",
  "version": "0.7.0",
  "description": "The GOV IE Design System tokens.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
