    "build:tokens": "tsx scripts/build.ts",
    "build:source": "tsup"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@govie-ds/prettier-config": "workspace:*",
    "@govie-ds/tokens-builder": "workspace:*",
    "@tsconfig/node20": "^20.1.4",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "tsx": "^4.16.5"
  }
}