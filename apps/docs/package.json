{
  "name": "@ogcio/design-system-docs",
  "version": "1.22.0",
  "private": true,
  "type": "module",
  "scripts": {
    "format": "prettier 'src/**/*.{ts,tsx}' --write",
    "format:check": "prettier 'src/**/*.{ts,tsx}' --check",
    "dev": "pnpm build:styles && pnpm build:content && next dev",
    "build": "pnpm build:styles && pnpm build:content && pnpm build:site",
    "build:content": "contentlayer2 build",
    "build:site": "next build",
    "build:styles": "node ./scripts/copy-html-ds.js && cross-env USE_RESOLVED_THEME=true tailwindcss build -i ./src/app/globals.css -o ./public/styles.css",
    "build:export": "cross-env NEXT_EXPORT=true next build",
    "start": "pnpm dlx serve@latest out",
    "lint": "pnpm lint:code && pnpm lint:spelling",
    "lint:code": "eslint '**/*.{ts,tsx}'",
    "lint:spelling": "spellchecker -l en-GB -d dictionary.txt -f '**/*.mdx'",
    "lint:spelling:update": "spellchecker -l en-GB --generate-dictionary dictionary.txt -f '**/*.mdx'",
    "test": "vitest run",
    "test:watch": "vitest",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "prettier": "@ogcio/design-system-prettier-config",
  "dependencies": {
    "@faker-js/faker": "^9.6.0",
    "@ogcio/analytics-sdk": "^0.2.6",
    "@ogcio/design-system-react": "workspace:*",
    "@ogcio/design-system-tailwind": "workspace:*",
    "@ogcio/design-system-tokens": "workspace:*",
    "@ogcio/theme-govie": "workspace:*",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/react-table": "^8.21.2",
    "camelcase": "^8.0.0",
    "clsx": "^2.1.1",
    "color-convert": "^2.0.1",
    "contentlayer2": "^0.5.8",
    "copy-text-to-clipboard": "^3.2.0",
    "lodash": "^4.17.21",
    "next": "^15.5.7",
    "next-contentlayer2": "^0.5.8",
    "next-themes": "^0.4.4",
    "re-resizable": "^6.9.17",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-syntax-highlighter": "^15.5.0",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animatecss": "^3.0.5",
    "ts-extras": "^0.11.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.5.7",
    "@ogcio/design-system-eslint-config": "workspace:*",
    "@ogcio/design-system-prettier-config": "workspace:*",
    "@types/color-convert": "^2.0.3",
    "@types/lodash": "^4.17.7",
    "@types/mdx": "^2.0.13",
    "@types/react-syntax-highlighter": "^15.5.13",
    "cross-env": "^7.0.3",
    "eslint": "^9.23.0",
    "eslint-config-next": "^15.5.7",
    "postcss": "^8.4.40",
    "prettier": "^3.3.3",
    "rehype-slug": "^6.0.0",
    "spellchecker-cli": "^7.0.2"
  }
}
