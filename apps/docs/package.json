{
  "name": "@govie-ds/docs",
  "version": "1.2.2",
  "private": true,
  "type": "module",
  "scripts": {
    "format": "prettier 'src/**/*.{ts,tsx}' --write",
    "format:check": "prettier 'src/**/*.{ts,tsx}' --check",
    "dev": "pnpm build:styles && pnpm build:content && next dev --turbo",
    "build": "pnpm build:styles && pnpm build:content && pnpm build:site",
    "build:content": "contentlayer2 build",
    "build:site": "next build",
    "build:styles": "node ./scripts/copy-html-ds.js && cross-env USE_RESOLVED_THEME=true tailwindcss build -i ./src/app/globals.css -o ./public/styles.css",
    "build:export": "cross-env NEXT_EXPORT=true next build",
    "start": "pnpm dlx serve@latest out",
    "lint": "pnpm lint:code && pnpm lint:spelling",
    "lint:code": "eslint '**/*.{ts,tsx}'",
    "lint:spelling": "spellchecker -l en-GB -d dictionary.txt -f '**/*.mdx'",
    "lint:spelling:update": "spellchecker -l en-GB --generate-dictionary dictionary.txt -f '**/*.mdx'",
    "test": "vitest run",
    "test:watch": "vitest",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "prettier": "@govie-ds/prettier-config",
  "dependencies": {
    "@faker-js/faker": "^9.6.0",
    "@govie-ds/deepmerge": "workspace:*",
    "@govie-ds/react": "workspace:*",
    "@govie-ds/tailwind": "workspace:*",
    "@govie-ds/theme-govie": "workspace:*",
    "@govie-ds/theme-hse": "workspace:*",
    "@govie-ds/tokens": "workspace:*",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/react-table": "^8.21.2",
    "camelcase": "^8.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "color-convert": "^2.0.1",
    "contentlayer2": "^0.5.4",
    "copy-text-to-clipboard": "^3.2.0",
    "kebab-case": "^1.0.2",
    "lodash": "^4.17.21",
    "next": "15.1.7",
    "next-contentlayer2": "^0.5.4",
    "next-themes": "^0.4.4",
    "re-resizable": "^6.9.17",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-syntax-highlighter": "^15.5.0",
    "react-use": "^17.6.0",
    "sharp": "^0.33.4",
    "spellchecker-cli": "^6.2.0",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animatecss": "^3.0.5",
    "ts-extras": "^0.11.0"
  },
  "devDependencies": {
    "@fontsource/lato": "^5.0.21",
    "@govie-ds/eslint-config": "workspace:*",
    "@govie-ds/prettier-config": "workspace:*",
    "@next/eslint-plugin-next": "^15.2.4",
    "@nx-tools/container-metadata": "^6.0.1",
    "@nx-tools/nx-container": "^6.0.1",
    "@types/color-convert": "^2.0.3",
    "@types/lodash": "^4.17.7",
    "@types/mdx": "^2.0.13",
    "@types/react-syntax-highlighter": "^15.5.13",
    "cross-env": "^7.0.3",
    "eslint": "^9.8.0",
    "eslint-plugin-storybook": "^0.11.3",
    "postcss": "^8.4.40",
    "prettier": "^3.3.3",
    "rehype-slug": "^6.0.0"
  }
}
