{
  "name": "root",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "format": "pnpm -r format",
    "format:check": "pnpm -r format:check",
    "lint": "pnpm -r lint",
    "ds": "pnpm build:libs && pnpm --filter @ogcio/design-system-docs dev",
    "ds:build": "pnpm build:libs && pnpm --filter @ogcio/design-system-docs build",
    "ds:build:export": "pnpm build:libs && pnpm --filter @ogcio/design-system-docs build:export",
    "ds:storybook": "pnpm build:libs && pnpm --filter @ogcio/design-system-docs storybook",
    "build": "pnpm -r --filter \"./apps/**\" --filter \"./packages/**\" build",
    "build:libs": "pnpm -r --filter \"./packages/**\" build",
    "dist": "pnpm -r --filter \"./apps/**\" --filter \"./packages/**\" dist",
    "test": "pnpm -r --filter \"./apps/**\" --filter \"./packages/**\" test",
    "html:storybook": "pnpm build:libs && pnpm --filter @ogcio/design-system-html storybook:dev",
    "html:storybook:build": "pnpm build:libs && pnpm --filter @ogcio/design-system-html storybook:build",
    "html:test": "pnpm build:libs && pnpm --filter @ogcio/design-system-html test",
    "react:storybook": "pnpm build:libs && pnpm --filter @ogcio/design-system-react storybook:dev",
    "react:storybook:build": "pnpm build:libs && pnpm --filter @ogcio/design-system-react storybook:build",
    "react:test": "pnpm build:libs && pnpm --filter @ogcio/design-system-react test",
    "examples:vite": "pnpm build:libs && pnpm --filter @ogcio/examples-vite dev",
    "examples:nextjs": "pnpm build:libs && pnpm --filter @ogcio/examples-nextjs dev",
    "examples:angular": "pnpm build:libs && pnpm --filter @ogcio/examples-angular start",
    "examples:html": "pnpm build:libs && pnpm --filter @ogcio/examples-html dev",
    "clean": "rm -rf node_modules && pnpm -r exec rm -rf node_modules && pnpm -r exec rm -rf dist",
    "prepare": "husky",
    "typecheck": "pnpm -r typecheck",
    "lint:staged": "lint-staged",
    "gen:licenses": "sh scripts/licenses.sh"
  },
  "lint-staged": {
    "packages/react/**/*.{js,ts,tsx}": [
      "pnpm -F @ogcio/design-system-react run lint --fix"
    ],
    "packages/html/**/*.{js,ts,tsx}": [
      "pnpm -F @ogcio/design-system-html run lint --fix"
    ],
    "examples/*/**/*.{js,ts,tsx}": [
      "pnpm -F @ogcio/examples-nextjs run lint --fix"
    ],
    "apps/docs/**/*.{ts,tsx}": [
      "pnpm -F @ogcio/design-system-docs run lint:code"
    ],
    "apps/docs/**/*.mdx": [
      "pnpm -F @ogcio/design-system-docs run lint:spelling"
    ]
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4.0.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "1.55.0",
    "@storybook/addon-a11y": "9.1.3",
    "@storybook/addon-coverage": "2.0.0",
    "@storybook/addon-docs": "9.1.3",
    "@storybook/addon-links": "9.1.3",
    "@storybook/addon-themes": "9.1.3",
    "@storybook/addon-vitest": "9.1.3",
    "@storybook/nextjs": "9.1.3",
    "@storybook/react": "9.1.3",
    "@storybook/react-vite": "9.1.3",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/react-table": "8.21.2",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "22.10.5",
    "@types/react": "^19.0.12",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "^19.0.4",
    "@types/tinycolor2": "^1.4.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/spy": "^3.2.4",
    "chromatic": "13.1.2",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "playwright": "1.55.0",
    "prettier": "^3.5.3",
    "storybook": "9.1.3",
    "storybook-addon-pseudo-states": "9.1.3",
    "tailwind-variants": "^0.2.1",
    "tailwindcss": "3.4.14",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "5.8.3",
    "vite": "^6.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-lib-inject-css": "^2.2.2",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "@faker-js/faker": "^9.6.0",
    "@popperjs/core": "^2.11.8",
    "@types/lodash": "^4.17.7",
    "focus-trap": "^7.6.5",
    "lodash": "^4.17.21",
    "react-color": "^2.19.3",
    "react-hook-form": "^7.58.1",
    "tinycolor2": "^1.6.0"
  }
}
