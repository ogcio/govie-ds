{
  "name": "root",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "format": "nx run-many --target=format --all",
    "format:check": "nx run-many --target=format:check --all",
    "lint": "nx run-many --target=lint --all",
    "graph": "nx graph",
    "ds": "nx run @ogcio/design-system-docs:dev",
    "ds:build": "nx run @ogcio/design-system-docs:build",
    "ds:build:export": "nx run @ogcio/design-system-docs:build:export",
    "ds:storybook": "nx run @ogcio/design-system-docs:storybook",
    "build": "nx run-many --target=build --all --exclude=@ogcio/examples-vite,@ogcio/examples-nextjs,@ogcio/examples-angular,@ogcio/examples-html",
    "build:libs": "nx run-many --target=build --all --exclude=@ogcio/design-system-docs,@ogcio/examples-vite,@ogcio/examples-nextjs,@ogcio/examples-angular,@ogcio/examples-html",
    "dist": "nx run-many --target=dist --all",
    "test": "nx run-many --target=test --all --exclude=@ogcio/examples-vite,@ogcio/examples-nextjs,@ogcio/examples-angular,@ogcio/examples-html",
    "tokens:build": "nx run @ogcio/design-system-tokens:build",
    "govie:build": "nx run @ogcio/theme-govie:build",
    "figma:build": "nx run @ogcio/figma:build",
    "html:storybook": "nx run @ogcio/design-system-html:storybook:dev",
    "html:storybook:build": "nx run @ogcio/design-system-html:storybook:build",
    "html:test": "nx run @ogcio/design-system-html:test",
    "react:storybook": "nx run @ogcio/design-system-react:storybook:dev",
    "react:storybook:build": "nx run @ogcio/design-system-react:storybook:build",
    "react:test": "nx run @ogcio/design-system-react:test",
    "examples:vite": "nx run @ogcio/examples-vite:dev",
    "examples:nextjs": "nx run @ogcio/examples-nextjs:dev",
    "examples:angular": "nx run @ogcio/examples-angular:start",
    "examples:html": "nx run @ogcio/examples-html:dev",
    "clean": "rm -rf node_modules && pnpm -r exec rm -rf node_modules && pnpm -r exec rm -rf dist"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "3.2.4",
    "@storybook/addon-a11y": "8.6.4",
    "@storybook/addon-coverage": "1.0.5",
    "@storybook/addon-docs": "8.6.4",
    "@storybook/addon-essentials": "8.6.4",
    "@storybook/addon-links": "8.6.4",
    "@storybook/addon-onboarding": "8.6.4",
    "@storybook/addon-themes": "8.6.4",
    "@storybook/addon-viewport": "8.6.4",
    "@storybook/blocks": "8.6.4",
    "@storybook/experimental-addon-test": "8.6.4",
    "@storybook/nextjs": "8.6.4",
    "@storybook/react": "8.6.4",
    "@storybook/react-vite": "8.6.4",
    "@storybook/test": "8.6.4",
    "@tailwindcss/typography": "^0.5.16",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "22.10.5",
    "@types/react": "^19.0.12",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "^19.0.4",
    "@types/tinycolor2": "^1.4.6",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "axe-playwright": "2.0.3",
    "chromatic": "11.25.1",
    "http-server": "^14.1.1",
    "nx": "20.4.0",
    "playwright": "^1.51.1",
    "prettier": "^3.5.3",
    "storybook": "8.6.4",
    "storybook-addon-pseudo-states": "^4.0.3",
    "tailwind-variants": "^0.2.1",
    "tailwindcss": "3.4.14",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "5.6.3",
    "vite": "^6.2.4",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-lib-inject-css": "^2.1.1",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "@vitest/spy": "2.1.3"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "react-color": "^2.19.3",
    "tinycolor2": "^1.6.0"
  }
}
