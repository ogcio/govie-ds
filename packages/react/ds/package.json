{
  "name": "@govie-ds/react",
  "version": "1.2.2",
  "description": "The GOV IE design system React components.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./dist/index.js",
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "format": "prettier 'src/**/*.{ts,tsx}' --write",
    "format:check": "prettier 'src/**/*.{ts,tsx}' --check",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "build": "pnpm build:ts && pnpm build:styles",
    "build:styles": "tailwindcss -c tailwind.config.js -i ./styles.css -o ./dist/styles.css",
    "build:ts": "vite build",
    "storybook:dev": "storybook dev -p 6006",
    "storybook:build": "storybook build --stats-json",
    "storybook:test": "vitest --project=storybook",
    "storybook:coverage": "vitest --project=storybook --coverage",
    "percy": "pnpm storybook:build && percy storybook ./storybook-static --config percy.yaml"
  },
  "prettier": "@govie-ds/prettier-config",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist",
    "styles"
  ],
  "keywords": [],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "dependencies": {
    "@govie-ds/tokens": "workspace:*",
    "@radix-ui/react-slot": "^1.1.2",
    "@tailwindcss/cli": "^4.1.1",
    "@tailwindcss/postcss": "^4.1.1",
    "clsx": "^2.1.1",
    "rollup-preserve-directives": "^1.1.2"
  },
  "devDependencies": {
    "@govie-ds/eslint-config": "workspace:*",
    "@govie-ds/prettier-config": "workspace:*",
    "@govie-ds/tailwind": "workspace:*",
    "@govie-ds/theme-doete": "workspace:*",
    "@govie-ds/theme-govie": "workspace:*",
    "@percy/cli": "^1.30.7",
    "@percy/storybook": "^6.0.3",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/css-modules": "^1.0.5",
    "axe-core": "^4.10.0",
    "eslint": "^9.8.0",
    "glob": "^10.4.5",
    "i18next": "^24.2.2",
    "postcss": "^8.4.40",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  }
}
