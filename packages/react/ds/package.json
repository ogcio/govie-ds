{
  "name": "@ogcio/design-system-react",
  "version": "1.27.0",
  "description": "The Government of Ireland Design System React components.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./dist/index.js",
    "./styles.css": "./dist/index.css"
  },
  "scripts": {
    "format": "prettier 'src/**/*.{ts,tsx}' --write",
    "format:check": "prettier 'src/**/*.{ts,tsx}' --check",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "build": "pnpm build:ts && pnpm build:styles",
    "build:styles": "postcss ./dist/index.css -o ./dist/index.css",
    "build:ts": "vite build",
    "storybook:dev": "storybook dev -p 6006",
    "storybook:build": "storybook build --stats-json",
    "playwright:test": "playwright test",
    "playwright:update-snapshots": "playwright test --update-snapshots",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "prettier": "@ogcio/design-system-prettier-config",
  "sideEffects": [
    "**/*.css",
    "./dist/browser-support/runtime.js"
  ],
  "files": [
    "dist",
    "styles"
  ],
  "keywords": [],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@radix-ui/react-slot": "^1.1.2",
    "bowser": "^2.13.1",
    "clsx": "^2.1.1",
    "deepmerge": "^4.3.1",
    "react-i18next": "^16.3.3",
    "rollup-preserve-directives": "^1.1.2",
    "ts-extras": "^0.11.0"
  },
  "devDependencies": {
    "@ogcio/design-system-eslint-config": "workspace:*",
    "@ogcio/design-system-prettier-config": "workspace:*",
    "@ogcio/design-system-tokens": "workspace:*",
    "@ogcio/theme-doete": "workspace:*",
    "@ogcio/theme-govie": "workspace:*",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/css-modules": "^1.0.5",
    "autoprefixer": "^10.4.19",
    "axe-core": "^4.10.0",
    "eslint": "^9.23.0",
    "eslint-plugin-storybook": "^0.12.0",
    "glob": "^11.0.1",
    "i18next": "^25.6.2",
    "postcss": "^8.4.40",
    "postcss-import": "^16.1.0",
    "postcss-cli": "^11.0.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwindcss": "^4.1.18",
    "vite": "^6.2.4"
  }
}
