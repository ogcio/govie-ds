{
  "name": "@govie-ds/react",
  "version": "0.25.0",
  "description": "The GOV IE design system React components.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./dist/index.js",
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "format": "prettier 'src/**/*.{ts,tsx}' --write",
    "format:check": "prettier 'src/**/*.{ts,tsx}' --check",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "pnpm build:ts && pnpm build:styles",
    "build:styles": "tailwindcss -i ./styles.css -o ./dist/styles.css --minify",
    "build:ts": "vite build"
  },
  "prettier": "@govie-ds/prettier-config",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist",
    "styles"
  ],
  "keywords": [],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "dependencies": {
    "@govie-ds/tokens": "workspace:*",
    "clsx": "^2.1.1",
    "notyf": "^3.10.0",
    "rollup-preserve-directives": "^1.1.2"
  },
  "devDependencies": {
    "@govie-ds/eslint-config": "workspace:*",
    "@govie-ds/prettier-config": "workspace:*",
    "@govie-ds/tailwind": "workspace:*",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/css-modules": "^1.0.5",
    "autoprefixer": "^10.4.19",
    "axe-core": "^4.10.0",
    "eslint": "^9.8.0",
    "glob": "^10.4.5",
    "postcss": "^8.4.40",
    "postcss-import": "^16.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-lib-inject-css": "^2.1.1"
  }
}