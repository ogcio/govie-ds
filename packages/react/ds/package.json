{
  "name": "@ogcio/design-system-react",
  "version": "1.30.0",
  "description": "The Government of Ireland Design System React components.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./dist/index.js",
    "./styles.css": "./dist/styles.css",
    "./fonts.css": "./fonts.css",
    "./logos": {
      "types": "./dist/atoms/icons/logos/index.d.ts",
      "import": "./dist/atoms/icon/logos/index.js"
    },
    "./logos/*": {
      "types": "./dist/atoms/icons/logos/*.d.ts",
      "import": "./dist/atoms/icons/logos/*.js"
    }
  },
  "scripts": {
    "format": "prettier 'src/**/*.{ts,tsx}' --write",
    "format:check": "prettier 'src/**/*.{ts,tsx}' --check",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "build": "pnpm build:ts && pnpm build:styles",
    "build:styles": "tailwindcss -i ./styles.css -o ./dist/styles.css --minify && node scripts/build-styles.js",
    "build:ts": "vite build",
    "storybook:dev": "storybook dev -p 6006",
    "storybook:build": "storybook build --stats-json",
    "storybook:serve": "http-server storybook-static -p 6006 -c-1",
    "playwright:test": "playwright test",
    "playwright:update-snapshots": "playwright test --update-snapshots",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "prettier": "@ogcio/design-system-prettier-config",
  "sideEffects": [
    "**/*.css",
    "./dist/browser-support/runtime.js"
  ],
  "files": [
    "dist",
    "styles",
    "fonts.css"
  ],
  "keywords": [],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "dependencies": {
    "@fontsource/lato": "^5.1.1",
    "@popperjs/core": "^2.11.8",
    "@radix-ui/react-slot": "^1.1.2",
    "bowser": "^2.13.1",
    "clsx": "^2.1.1",
    "react-i18next": "^16.3.3",
    "rollup-preserve-directives": "^1.1.2"
  },
  "devDependencies": {
    "@ogcio/design-system-eslint-config": "workspace:*",
    "@ogcio/design-system-prettier-config": "workspace:*",
    "@ogcio/design-system-tailwind": "workspace:*",
    "@ogcio/theme-doete": "workspace:*",
    "@ogcio/theme-govie": "workspace:*",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/css-modules": "^1.0.5",
    "autoprefixer": "^10.4.19",
    "axe-core": "^4.10.0",
    "eslint": "^9.23.0",
    "eslint-plugin-storybook": "^0.12.0",
    "glob": "^11.0.1",
    "http-server": "^14.1.1",
    "i18next": "^25.6.2",
    "postcss": "^8.4.40",
    "postcss-import": "^16.1.0",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  }
}
