{
  "name": "@govie-react/ds",
  "version": "0.11.0",
  "description": "The GOV IE design system React components.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./dist/index.js",
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "format": "prettier 'src/**/*.{ts,tsx}' --write",
    "format:check": "prettier 'src/**/*.{ts,tsx}' --check",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "build": "pnpm build:ts && pnpm build:styles",
    "build:styles": "tailwindcss -i ./styles.css -o ./dist/styles.css --minify",
    "build:ts": "vite build"
  },
  "prettier": "@govie-ds/prettier-config",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist",
    "styles"
  ],
  "keywords": [],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "dependencies": {
    "@govie-ds/tokens": "workspace:*",
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@aaos/nx-publish": "^1.4.0",
    "@govie-ds/eslint-config": "workspace:*",
    "@govie-ds/prettier-config": "workspace:*",
    "@govie-ds/tailwind": "workspace:*",
    "@storybook/react": "^8.2.7",
    "@storybook/test": "^8.2.7",
    "@tsconfig/node20": "^20.1.4",
    "@types/css-modules": "^1.0.5",
    "@types/react": "^18.2.78",
    "@types/react-dom": "^18.2.25",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.8.0",
    "glob": "^10.4.5",
    "postcss": "^8.4.40",
    "postcss-import": "^16.1.0",
    "prettier": "^3.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.7",
    "vite": "^5.3.5",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-lib-inject-css": "^2.1.1"
  }
}
