{
  "name": "@govie-ds/tailwind",
  "version": "0.14.0",
  "description": "The GOV IE design system Tailwind utilities.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./dist/index.js",
    "./components.css": "./css/components.css"
