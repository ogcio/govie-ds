{
  "name": "@ogcio/design-system-tailwind",
  "version": "1.21.2",
  "description": "The Government of Ireland Design System Tailwind utilities.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./components.css": "./css/components.css",
    "./layout.css": "./css/layout.css",
    "./typography.css": "./css/typography.css"
  },
  "scripts": {
    "format": "prettier 'src/**/*.ts' --write",
    "format:check": "prettier 'src/**/*.ts' --check",
    "lint": "eslint 'src/**/*.ts'",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "files": [
    "dist"
  ],
  "prettier": "@ogcio/design-system-prettier-config",
  "peerDependencies": {
    "tailwindcss": "^4.1.18"
  },
  "dependencies": {
    "@ogcio/design-system-tokens": "workspace:*",
    "deepmerge": "^4.3.1",
    "ts-extras": "^0.11.0"
  },
  "devDependencies": {
    "@ogcio/design-system-prettier-config": "workspace:*",
    "eslint": "^9.23.0"
  }
}
