    "test": "vitest run",
    "test:watch": "vitest"
  },
  "files": [
    "dist"
  ],
  "prettier": "@govie-ds/prettier-config",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@govie-ds/deepmerge": "workspace:*",
    "@govie-ds/tokens": "workspace:*",
    "ts-extras": "^0.11.0"
  },
  "devDependencies": {
    "@govie-ds/prettier-config": "workspace:*",
    "@tsconfig/node20": "^20.1.4",
    "eslint": "^9.8.0",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4"
  }
