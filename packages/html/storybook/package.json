{
  "name": "@govie-frontend/storybook",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "node ./scripts/copy-macros.js && STORYBOOK_ENV=prod storybook build",
    "test:local": "test-storybook",
    "test:coverage": "test-storybook --coverage",
    "test:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"yarn build-storybook --quiet && npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && yarn test-storybook\""
  },
  "prettier": "@govie-ds/prettier-config",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@fontsource/lato": "^5.0.21",
    "@govie-ds/eslint-config": "workspace:*",
    "@govie-ds/html": "workspace:*",
    "@govie-ds/macro": "workspace:*",
    "@govie-ds/prettier-config": "workspace:*",
    "@govie-ds/tailwind": "workspace:*",
    "@govie-ds/theme-govie": "workspace:*",
    "fs-extra": "^11.2.0",
    "glob": "^10.4.5",
    "nunjucks": "^3.2.4"
  },
  "peerDependencies": {
    "@babel/preset-env": "7.25.3"
  }
}