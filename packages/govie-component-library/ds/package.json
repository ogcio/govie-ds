{
  "name": "@ogcio/govie-component-library",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "files": [
    "components/",
    "dist/",
    "src/",
    "hydrate/",
    "www/",
    "package.json"
  ],
  "scripts": {
    "build": "pnpm build:stencil && pnpm build:styles",
    "build:stencil": "stencil build",
    "build:styles": "tailwindcss -i ./styles.css -o ./dist/styles.css --minify",
    "dev": "stencil build --dev --watch --serve",
    "example": "concurrently -k -s first \"pnpm build\" && pnpm dev && \"open-cli http://localhost:3333/index.html\"",
    "build:prod": "stencil build --prod",
    "clean": "rm -rf dist www .stencil hydrate loader components",
    "test": "stencil test --spec",
    "storybook": "pnpm clean && pnpm build && storybook dev -p 6006"
  },
  "exports": {
    "./styles.css": "./dist/styles.css",
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs.js",
      "default": "./dist/index.mjs"
    },
    "./loader": {
      "types": "./loader/index.d.ts",
      "import": "./loader/index.es2017.js",
      "require": "./loader/index.cjs.js",
      "default": "./loader/index.es2017.js"
    },
    "./hydrate": {
      "types": "./hydrate/index.d.ts",
      "import": "./hydrate/index.js",
      "require": "./hydrate/index.cjs.js",
      "default": "./hydrate/index.js"
    },
    "./components/*.js": {
      "types": "./dist/types/components/*.d.ts",
      "import": "./components/*.js"
    },
    "./components/*": {
      "types": "./dist/types/components/*.d.ts",
      "import": "./components/*",
      "require": "./components/*.cjs"
    },
    "./components": {
      "types": "./dist/types/components.d.ts",
      "import": "./components/index.js",
      "require": "./components/index.cjs.js",
      "default": "./components/index.js"
    }
  },
  "dependencies": {
    "@stencil-community/postcss": "^2.2.0",
    "@stencil/core": "^4.41.0",
    "@stencil/react-output-target": "^1.2.0",
    "@stencil/storybook-plugin": "^0.5.6",
    "@storybook/addon-links": "9.1.3",
    "@testing-library/jest-dom": "^6.4.8",
    "autoprefixer": "^10.4.19",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "open-cli": "^8.0.0",
    "react": "^19.2.3",
    "storybook": "9.1.3",
    "wait-on": "^9.0.3"
  },
  "devDependencies": {
    "@ogcio/design-system-eslint-config": "workspace:*",
    "@ogcio/design-system-prettier-config": "workspace:*",
    "@ogcio/design-system-tailwind": "workspace:*",
    "@ogcio/theme-doete": "workspace:*",
    "@ogcio/theme-govie": "workspace:*",
    "@storybook/addon-docs": "9.1.3"
  }
}
